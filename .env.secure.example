# ============================================================================
# SECURE ENVIRONMENT CONFIGURATION
# ============================================================================
# IMPORTANT: Never commit the actual .env file to version control!
# This is a template showing the required structure with secure defaults.
# ============================================================================

# ----------------------------------------------------------------------------
# CRITICAL SECURITY SETTINGS (REQUIRED)
# ----------------------------------------------------------------------------

# JWT Secret - Used for signing authentication tokens
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
# MUST be at least 64 characters in production
JWT_SECRET=REPLACE_WITH_64_CHAR_RANDOM_STRING

# Admin Key - Required to access admin panel
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# MUST be at least 32 characters
ADMIN_KEY=REPLACE_WITH_32_CHAR_RANDOM_STRING

# Session Secret - Used for session management
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=REPLACE_WITH_32_CHAR_RANDOM_STRING

# ----------------------------------------------------------------------------
# CORS & SECURITY
# ----------------------------------------------------------------------------

# Allowed origins for CORS (comma-separated, NO SPACES)
# Development: http://localhost:5173,http://localhost:3005
# Production: https://yourdomain.com,https://www.yourdomain.com
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3005

# Admin IP whitelist (comma-separated, leave empty to allow all)
# Example: 192.168.1.100,10.0.0.50
# Leave empty for development, set in production for extra security
ADMIN_ALLOWED_IPS=

# Admin panel URL path (keep this secret!)
# Generate with: node -e "console.log('/admin-' + require('crypto').randomBytes(8).toString('hex'))"
VITE_ADMIN_PATH=/admin-REPLACE_WITH_RANDOM_STRING

# ----------------------------------------------------------------------------
# APPLICATION SETTINGS
# ----------------------------------------------------------------------------

# API URL (only needed in development)
# Production uses relative URLs automatically
VITE_API_URL=http://localhost:3005

# Website URL for sharing features
VITE_APP_URL=http://localhost:5173

# Node environment (development or production)
NODE_ENV=development

# Server port
PORT=3005

# ----------------------------------------------------------------------------
# THIRD-PARTY API KEYS (Optional Features)
# ----------------------------------------------------------------------------

# Buy Me a Coffee username
# Get from: https://www.buymeacoffee.com/
VITE_BUYMEACOFFEE_USERNAME=yourusername

# EmailJS Configuration (for contact form and password reset)
# Get from: https://www.emailjs.com/
# 1. Create account and add email service
# 2. Create email templates
# 3. Copy credentials below
VITE_EMAILJS_SERVICE_ID=your_service_id_here
VITE_EMAILJS_TEMPLATE_ID=your_template_id_here
VITE_EMAILJS_PUBLIC_KEY=your_public_key_here
EMAILJS_PRIVATE_KEY=your_private_key_here
EMAILJS_PASSWORD_RESET_TEMPLATE_ID=your_reset_template_id_here

# Google reCAPTCHA v2 (for contact form spam protection)
# Get from: https://www.google.com/recaptcha/admin
# Select reCAPTCHA v2 "I'm not a robot" Checkbox
VITE_RECAPTCHA_SITE_KEY=your_site_key_here

# Gemini API Key (for AI coffee bag scanning feature)
# Get from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_api_key_here

# ----------------------------------------------------------------------------
# TEMPLATE & USER SETTINGS
# ----------------------------------------------------------------------------

# Auto-copy admin templates to new users (true/false)
SEED_USER_DEFAULTS=true

# Template user email - recipes from this user are shown as templates
TEMPLATE_USER_EMAIL=admin@admin.com

# Admin emails - comma-separated list for admin dashboard access
ADMIN_EMAILS=admin@admin.com

# ----------------------------------------------------------------------------
# SECURITY CHECKLIST
# ----------------------------------------------------------------------------
# Before deploying to production:
# [ ] All secrets are randomly generated (64+ chars for JWT_SECRET)
# [ ] ALLOWED_ORIGINS contains only your production domain(s)
# [ ] ADMIN_ALLOWED_IPS is set (optional but recommended)
# [ ] All third-party API keys are from production accounts
# [ ] NODE_ENV is set to "production"
# [ ] This file is NOT committed to git (.env in .gitignore)
# [ ] Old secrets have been rotated if previously exposed
# [ ] HTTPS is enforced (via reverse proxy or hosting platform)
# ----------------------------------------------------------------------------
