{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "src/routes/brewers.ts",
    "src/routes/grinders.ts",
    "src/routes/brews.ts",
    "src/routes/coffeeBeans.ts",
    "src/routes/coffeeServers.ts",
    "src/routes/brewTemplates.ts"
  ]
}
